{
  "manifest_version": 2,

  "name": "WCAG Luminosity Contrast Ratio Analyser",
  "description": "Color Contrast Analyser for WCAG 2.0 compliance",
  "version": "1.0",

  "browser_action": {
    "default_icon": "Images/icon.png",
    "default_popup": "popup.html"
  },

  "icons": { 
    "16": "images/logos/16.png", 
    "48":  "images/logos/48.png", 
    "128": "images/logos/128.png" 
    },

  "background":
  {
      //"scripts": [ "background.js" ]
      "page" : "background.html"
  },

  "permissions": [
    "tabs", "activeTab", "<all_urls>", "storage", "clipboardRead", "clipboardWrite"
  ],

  "web_accessible_resources": [
    "font/*.woff2"
  ]
}